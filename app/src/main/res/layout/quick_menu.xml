<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00cc47"
    android:padding="@dimen/widget_margin"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/widget_Result"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#cc0f0f"
            android:hint="Draw eq. or symbol"
            android:textStyle="italic"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:textAlignment="center"
            android:textSize="21sp"
            android:layout_below="@+id/appwidget_text"
            android:layout_centerHorizontal="true"
            android:id="@+id/widget_Calculate"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/widget_Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:background="#dce067"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textColor="#000000"
        android:textSize="21sp"
        android:textStyle="normal"
        />
</RelativeLayout>